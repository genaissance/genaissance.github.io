import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';

const services = [
  {
    title: 'AI Strategy Consulting',
    description: 'Develop comprehensive AI strategies aligned with your business objectives.',
    features: [
      'AI Readiness Assessment',
      'Digital Transformation Planning',
      'ROI Analysis',
      'Risk Management'
    ],
    icon: 'üéØ'
  },
  {
    title: 'Integration & Automation',
    description: 'Seamlessly integrate AI solutions into your existing infrastructure.',
    features: [
      'Process Automation',
      'System Integration',
      'Workflow Optimization',
      'Performance Monitoring'
    ],
    icon: '‚öôÔ∏è'
  },
  {
    title: 'Creative AI Solutions',
    description: 'Harness AI for creative industries and innovative projects.',
    features: [
      'Generative AI Implementation',
      'Content Creation',
      'Design Automation',
