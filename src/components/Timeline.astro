---
interface TimelineItem {
  year: string;
  title: string;
  description: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="relative">
  <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-renaissance-gold"></div>
  <div class="space-y-12">
    {items.map((item, index) => (
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 -mt-1">
          <div class="w-4 h-4 rounded-full bg-renaissance-gold border-4 border-white"></div>
        </div>
        <div class={`w-1/2 ${index % 2 === 0 ? 'pr-8 text-right' : 'pl-8 ml-auto'}`}>
          <span class="font-serif text-renaissance-burgundy text-xl">{item.year}</span>
          <h3 class="font-serif text-2xl mt-1 mb-2">{item.title}</h3>
          <p class="text-gray-600">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>