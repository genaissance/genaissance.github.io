---
interface Props {
  name: string;
  role: string;
  description: string;
  capabilities: string[];
  imageUrl: string;
}

const { name, role, description, capabilities, imageUrl } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:border-renaissance-gold transition-all duration-300">
  <div class="aspect-square relative overflow-hidden bg-renaissance-cream">
    <img src="/images/placeholder.svg" alt={name} class="w-full h-full object-cover" />
  </div>
  <div class="p-6">
    <h3 class="font-serif text-2xl mb-1">{name}</h3>
    <p class="text-renaissance-burgundy font-medium mb-4">{role}</p>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="space-y-2">
      <h4 class="font-medium text-gray-900">Core Capabilities:</h4>
      <ul class="list-disc list-inside text-gray-600 space-y-1">
        {capabilities.map(capability => (
          <li>{capability}</li>
        ))}
      </ul>
    </div>
  </div>
</div>