---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center';
}

const { title, subtitle, alignment = 'center' } = Astro.props;
const alignmentClass = alignment === 'center' ? 'text-center' : 'text-left';
---

<div class={`max-w-4xl mx-auto mb-12 ${alignmentClass}`}>
  <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-semibold mb-4">{title}</h2>
  {subtitle && <p class="text-lg text-gray-600">{subtitle}</p>}
</div>